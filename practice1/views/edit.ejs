<% include partials/header %>

<h3 class="newFoodForm__header">Edit Food Item Here!</h3>

<form class = "ui form newFoodForm" action = "/index/<%= product._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Food Name</label>
        <input type="text" name="store[product]" value="<%= product.product %>">
    </div>
    <div class="field">
        <label>Image URL</label>
        <input type="text" name="store[image]" value="<%= product.image %>">
    </div>
    <div class="field">
        <label>Food Price</label>
        <input type="text" name="store[price]" value="<%= product.price %>">
    </div>
    <div class="field">
        <label>Description (include ingredients please)</label>
        <input type="text" name="store[description]" value="<%= product.description %>">
    </div>
    <button class="ui button teal" type="submit">Submit</button>
</form>

<% include partials/footer %>